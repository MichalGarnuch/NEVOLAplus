@model NEVOLAplus.Data.Models.Inventory.Asset
@inject NEVOLAplus.Portal.Services.ITextSnippetService SnippetService

@{
    // Tytuł strony:
    ViewData["Title"] = await SnippetService.GetContentByKeyAsync("Asset_Delete_Title")
                       ?? "Delete Asset";
}

<h1>@ViewData["Title"]</h1>

<h3>
    @(await SnippetService.GetContentByKeyAsync("Asset_Delete_ConfirmText")
        ?? "Are you sure you want to delete this?")
</h3>
<div>
    <h4>@(await SnippetService.GetContentByKeyAsync("Asset_EntityName_Label") ?? "Asset")</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssetType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssetType.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AssetId" />
        <input type="submit"
               value="@(await SnippetService.GetContentByKeyAsync("Asset_Delete_Button") ?? "Delete")"
               class="btn btn-danger" /> |
        <a asp-action="Index">
            @(await SnippetService.GetContentByKeyAsync("Asset_BackToList_Link") ?? "Back to List")
        </a>
    </form>
</div>
