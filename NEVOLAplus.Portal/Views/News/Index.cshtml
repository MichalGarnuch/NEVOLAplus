@model IEnumerable<NEVOLAplus.Data.Models.CMS.News>
@{
    ViewData["Title"] = "News";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>News</h2>
    <a asp-action="Create" class="btn btn-success">➕ Add News</a>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>Link Title</th>
            <th>Title</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LinkTitle</td>
                <td>@item.Title</td>
                <td>@item.DisplayOrder</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.NewsId" class="btn btn-sm btn-warning">✏️</a>
                    <a asp-action="Details" asp-route-id="@item.NewsId" class="btn btn-sm btn-info text-white">ℹ️</a>
                    <a asp-action="Delete" asp-route-id="@item.NewsId" class="btn btn-sm btn-danger">🗑️</a>
                </td>
            </tr>
        }
    </tbody>
</table>
