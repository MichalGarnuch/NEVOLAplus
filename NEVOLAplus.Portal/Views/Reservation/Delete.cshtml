@model NEVOLAplus.Data.Models.Reservation.Reservation
@inject NEVOLAplus.Portal.Services.ITextSnippetService SnippetService

@{
    // Tytuł strony: "Delete Reservation"
    ViewData["Title"] = await SnippetService.GetContentByKeyAsync("Reservation_Delete_Title")
                       ?? "Delete";
}

<h1>@ViewData["Title"]</h1>

<h3>
    @(await SnippetService.GetContentByKeyAsync("Reservation_Delete_ConfirmText")
        ?? "Are you sure you want to delete this?")
</h3>
<div>
    <h4>@(await SnippetService.GetContentByKeyAsync("Reservation_EntityName_Label") ?? "Reservation")</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt class="col-sm-2">
            @(await SnippetService.GetContentByKeyAsync("Reservation_Asset_Label") ?? "Asset")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Asset.Name)
        </dd>

        <dt class="col-sm-2">
            @(await SnippetService.GetContentByKeyAsync("Reservation_Employee_Label") ?? "Employee")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.FirstName) @Html.DisplayFor(model => model.Employee.LastName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ReservationId" />
        <input type="submit"
               value="@(await SnippetService.GetContentByKeyAsync("Reservation_Delete_Button")
                       ?? "Delete")"
               class="btn btn-danger" />
        |
        <a asp-action="Index">
            @(await SnippetService.GetContentByKeyAsync("Reservation_BackToList_Link")
                ?? "Back to List")
        </a>
    </form>
</div>
