@model IEnumerable<NEVOLAplus.Data.Models.CMS.Page>
@{
    ViewData["Title"] = "Pages";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Pages</h2>
    <a asp-action="Create" class="btn btn-success">➕ Add Page</a>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>Link Title</th>
            <th>Heading</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LinkTitle</td>
                <td>@item.Heading</td>
                <td>@item.DisplayOrder</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.PageId" class="btn btn-sm btn-warning">✏️ Edit</a>
                    <a asp-action="Details" asp-route-id="@item.PageId" class="btn btn-sm btn-info text-white">ℹ️ Detail</a>
                    <a asp-action="Delete" asp-route-id="@item.PageId" class="btn btn-sm btn-danger">🗑️ Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
