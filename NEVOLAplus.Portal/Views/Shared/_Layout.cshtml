@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - NEVOLAplus</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-image: url('/image/TloBiznesowe7.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            margin: 0;
        }
        .logo {
            height: 40px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-dark bg-opacity-50 mb-3">
        <div class="container-fluid">
            <a class="navbar-brand text-white me-2" asp-controller="Home" asp-action="Index">
                <img src="/image/nevola.png" class="logo" alt="Logo" />
            </a>
            <button class="btn btn-success me-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu">
                Menu
            </button>

            <form class="d-flex ms-auto">
                <input class="form-control me-2" type="search" placeholder="Szukaj" aria-label="Szukaj" />
                <button class="btn btn-success" type="submit">Szukaj</button>
                <a asp-controller="Account" asp-action="Logout" class="btn btn-danger ms-2">Wyloguj</a>
            </form>
        </div>
    </nav>

    <!-- Sidebar menu -->
    <div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="sidebarMenu">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title">Menu</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Index">Strona główna</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Ogólne" asp-action="PanelUzytkownika">Panel użytkownika</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Ogólne" asp-action="MojeAktualnosci">Moje aktualności</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Pracownik" asp-action="DaneKadrowe">Dane kadrowe</a></li>
            </ul>
        </div>
    </div>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="text-center text-muted border-top py-3 mt-4">
        &copy; 2025 - NEVOLAplus
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
