@model NEVOLAplus.Data.Models.CMS.TextSnippet
@{
    ViewData["Title"] = "Delete Snippet";
}
<h2>@ViewData["Title"]</h2>
<h3>Are you sure?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Key</dt>
        <dd class="col-sm-10">@Model.Key</dd>
        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.Content</dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="TextSnippetId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
