@model IEnumerable<NEVOLAplus.Data.Models.Reservation.Reservation>
@{
    ViewData["Title"] = "Reservations";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Reservations</h2>
    <a asp-action="Create" class="btn btn-success">➕ Add Reservation</a>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Employee</th>
            <th>Asset</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>@item.Employee?.FirstName @item.Employee?.LastName</td>
                <td>@item.Asset?.Name</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.ReservationId" class="btn btn-sm btn-warning">✏️ Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ReservationId" class="btn btn-sm btn-info text-white">ℹ️ Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ReservationId" class="btn btn-sm btn-danger">🗑️ Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
