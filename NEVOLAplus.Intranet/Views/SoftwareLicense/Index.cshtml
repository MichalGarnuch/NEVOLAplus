@model IEnumerable<NEVOLAplus.Data.Models.Licensing.SoftwareLicense>

@{
    ViewData["Title"] = "Software Licenses";
}

<h2 class="mb-3">List of Software Licenses</h2>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>➕ Add New License
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
            <th>@Html.DisplayNameFor(model => model.LicenseKey)</th>
            <th>@Html.DisplayNameFor(model => model.ValidUntil)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.LicenseKey</td>
                <td>@item.ValidUntil.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SoftwareLicenseId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.SoftwareLicenseId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.SoftwareLicenseId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
