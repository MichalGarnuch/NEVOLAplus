@model IEnumerable<NEVOLAplus.Data.Models.Licensing.SoftwareLicense>
@{
    ViewData["Title"] = "Software Licenses";
}

<form asp-action="DeleteSelected" method="post">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Software Licenses</h2>
        <a asp-action="Create" class="btn btn-success">➕ Add License</a>
    </div>

    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th><input type="checkbox" id="select-all" /></th>
                <th>Product Name</th>
                <th>License Key</th>
                <th>Valid Until</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><input type="checkbox" name="selectedIds" value="@item.SoftwareLicenseId" /></td>
                    <td>@item.ProductName</td>
                    <td>@item.LicenseKey</td>
                    <td>@item.ValidUntil.ToShortDateString()</td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.SoftwareLicenseId" class="btn btn-sm btn-warning">✏️ Edit</a>
                        <a asp-action="Details" asp-route-id="@item.SoftwareLicenseId" class="btn btn-sm btn-info text-white">ℹ️ Details</a>
                        <a asp-action="Delete" asp-route-id="@item.SoftwareLicenseId" class="btn btn-sm btn-danger">🗑️ Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-danger mt-2">Delete Selected</button>
</form>

<script>
    document.getElementById('select-all').addEventListener('change', function () {
        const checkboxes = document.querySelectorAll('input[name="selectedIds"]');
        checkboxes.forEach(cb => cb.checked = this.checked);
    });
</script>
